@model BugTracker.Models.ViewModels.AssignPMVM

<h3>@Model.Project.Name</h3>
<h2>Assign Project Manager</h2>
<hr />
<div class="row">
    <div class="col-md-4">


        <div class="card">
            <div class="card-header">
                <label class="control-label">Assign PM</label>
            </div>
            <div class="card-body">
                <form method="post" asp-action="AssignPM" asp-controller="Projects">
                    <input hidden asp-for="Project.Id" />
                    <p>@Model.Project.Name</p>
                    <p>Description: @Model.Project.Description</p>
                
                    <div class="form-group">
                        <label class="col-form-label">Select PM</label>
                        <select asp-for="PMId" class="form-control" asp-items="@Model.PMList">
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Assign" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="UnassignedProjects" asp-controller="Projects">Back To List</a>
</div>


