
@page
@model LoginModel

@{
    Layout = "_mpLayoutModal";
    ViewData["Title"] = "Log in";
}


<div class="btns">
    <button class="btn login-btn">Enter</button>
    <button class="btn signup-btn">Register</button>
</div>

<div class="form-container disable">
    <div class="signup-form-wrapper modal">
        <div class="x-btn signup-x">
            &times;
        </div>
        <div class="form-header">
            <h1>Issue Tracker</h1>
            <h3>Join Us</h3>
        </div>
        <form class="form" id="display">
            <div class="input-group">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="UserName" />

            </div>
            <div class="input-group">
                <i class="fas fa-envelope"></i>
                <input type="email" placeholder="Email" />

            </div>
            <div class="input-group">
                <i class="fas fa-key"></i>
                <input type="password" placeholder="Password" />
            </div>
            <button type="button">Sign Up</button>

        </form>

    </div>
</div>

<div class="login-form-wrapper modal">
    <div class="x-btn login-x">
        &times;
    </div>
    <div class="form-header">
        <h1>Issue Tracker</h1>
    </div>



    <div class="row text-center">
        <div class="row text-center">
            <div class="col">
                <a href="#" role="button">Demo Worker</a>
                <a href="#" role="button">Demo Admin</a>

            </div>
        </div>
        <div class="row text-center">
            <div class="col">
                <a href="#" role="button">Demo PM</a>
                <a href="#" role="button">Demo New User</a>

            </div>

        </div>

        <div class="row text-center">
            <div class="col mb-2">
                <a href="#" role="button">Demo tenant</a>

            </div>

        </div>


        <form class="form" id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group">
                <i class="fas fa-user"></i>
                <input type="text" asp-for="Input.Email" placeholder="UserName" />


            </div>

            <div class="input-group">
                <i class="fas fa-key"></i>
                <input type="password" asp-for="Input.Password" placeholder="Password" />

            </div>
            <button type="submit">Log In</button>


            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>

            <p>
                <a class="signup-btn" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p class="mb-2">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>

        </form>

    </div>

</div>




